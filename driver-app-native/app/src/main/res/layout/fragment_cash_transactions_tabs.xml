<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- Sub-tabs for Transactions: Pending, Approved, Rejected, All -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/transactionsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/text_secondary_dark"
        app:tabSelectedTextColor="@color/accent"
        app:tabIndicatorColor="@color/accent"
        app:tabBackground="@color/paper_dark">

        <com.google.android.material.tabs.TabItem
            android:text="All" />

        <com.google.android.material.tabs.TabItem
            android:text="Pending" />

        <com.google.android.material.tabs.TabItem
            android:text="Approved" />

        <com.google.android.material.tabs.TabItem
            android:text="Rejected" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Tab Content -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/transactionsViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

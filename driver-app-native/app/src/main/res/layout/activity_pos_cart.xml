<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/paper_dark"
            app:titleTextColor="@color/text_primary_dark"
            app:navigationIconTint="@color/text_primary_dark"
            app:title="POS - Cart" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add Items Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addItemsButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add Items"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/accent"
                app:cornerRadius="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Order Type Selection: Walk-in or Delivery -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/orderTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="@color/accent"
                app:boxStrokeColor="@color/accent"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@color/paper_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/orderTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:padding="16dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/accent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Staff Purchase Checkbox (only visible for Walk-in) -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/staffPurchaseCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Staff Purchase"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- Cart Items List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartItemsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Customer Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customerPhoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="@color/accent"
                app:boxStrokeColor="@color/accent"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@color/paper_dark"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/accent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/customerPhoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Customer Phone Number"
                    android:inputType="phone"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/text_secondary_dark"
                    android:textSize="16sp"
                    android:minHeight="56dp"
                    android:padding="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:completionThreshold="3" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Create Customer Button (shown when customer doesn't exist) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/createCustomerButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create New Customer"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/paper_dark"
                app:strokeColor="@color/accent"
                app:strokeWidth="2dp"
                android:textColor="@color/accent"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Territory Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/territoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="@color/accent"
                app:boxStrokeColor="@color/accent"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@color/paper_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/territoryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Territory"
                    android:inputType="none"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/text_secondary_dark"
                    android:minHeight="56dp"
                    android:padding="16dp"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Delivery Address -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/deliveryAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="@color/accent"
                app:boxStrokeColor="@color/accent"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@color/paper_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/deliveryAddressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Delivery Address"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/text_secondary_dark"
                    android:minHeight="56dp"
                    android:padding="16dp"
                    android:completionThreshold="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Payment Method -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/paymentMethodLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="@color/accent"
                app:boxStrokeColor="@color/accent"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@color/paper_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/paymentMethodSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:padding="16dp"
                    android:textColor="@color/text_primary_dark"
                    android:backgroundTint="@color/accent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Delivery Fee -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/deliveryFeeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextColor="@color/accent"
                app:boxStrokeColor="@color/accent"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="@color/paper_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/deliveryFeeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Delivery Fee"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_primary_dark"
                    android:textColorHint="@color/text_secondary_dark"
                    android:minHeight="56dp"
                    android:padding="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Order Summary -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/paper_dark"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_dark"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Order Total"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="8dp" />

                        <TextView
                            android:id="@+id/orderTotalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES 0"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Fee"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            android:paddingStart="4dp"
                            android:paddingEnd="8dp" />

                        <TextView
                            android:id="@+id/deliveryFeeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES 0"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_dark"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textColor="@color/accent"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:paddingStart="4dp"
                            android:paddingEnd="8dp" />

                        <TextView
                            android:id="@+id/totalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KES 0"
                            android:textColor="@color/accent"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Profit/Loss Indicator -->
            <LinearLayout
                android:id="@+id/profitLossContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit/Loss:"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/profitLossChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFIT"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="#4caf50"
                    app:chipMinHeight="32dp" />
            </LinearLayout>

            <!-- Submit Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitOrderButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Submit Order"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@color/accent"
                app:cornerRadius="12dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

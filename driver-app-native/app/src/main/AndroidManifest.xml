<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />

    <application
        android:name=".DriverApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.DialADrinkDriver"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.auth.PhoneNumberActivity"
            android:exported="true"
            android:theme="@style/Theme.DialADrinkDriver">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.auth.OtpVerificationActivity"
            android:parentActivityName=".ui.auth.PhoneNumberActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.auth.PinSetupActivity"
            android:parentActivityName=".ui.auth.OtpVerificationActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.auth.PinLoginActivity"
            android:parentActivityName=".ui.auth.PhoneNumberActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.auth.UserTypeSelectionActivity"
            android:parentActivityName=".ui.auth.PhoneNumberActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.orders.ActiveOrdersActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.orders.PendingOrdersActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.orders.InProgressOrdersActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.orders.CompletedOrdersActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.orders.CancelledOrdersActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.orders.OrderDetailActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.orders.OrderAcceptanceActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver.FullScreen"
            android:showOnLockScreen="true"
            android:turnScreenOn="true" />
        
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.notifications.NotificationsActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.notifications.NotificationDetailActivity"
            android:parentActivityName=".ui.notifications.NotificationsActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.wallet.CashAtHandActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.wallet.MyWalletActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.notifications.TestNotificationOverlayActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver.FullScreen"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            android:showOnLockScreen="true"
            android:turnScreenOn="true" />

        <!-- Admin Activities -->
        <activity
            android:name=".ui.admin.AdminLoginActivity"
            android:parentActivityName=".ui.auth.PhoneNumberActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:parentActivityName=".ui.admin.AdminLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.AdminProfileActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.AdminSettingsActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.AssignRiderActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.CompletedDriversActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.DriverTransactionsActivity"
            android:parentActivityName=".ui.admin.CompletedDriversActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.LoansActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.RiderDetailsActivity"
            android:parentActivityName=".ui.admin.LoansActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.RequestPaymentActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.AdminCompletedOrdersActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.admin.PosCompletedOrdersActivity"
            android:parentActivityName=".ui.admin.AdminCompletedOrdersActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <!-- POS Activities -->
        <activity
            android:name=".ui.pos.PosProductListActivity"
            android:parentActivityName=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.pos.PosCartActivity"
            android:parentActivityName=".ui.pos.PosProductListActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />

        <!-- Shop Agent Activities -->
        <activity
            android:name=".ui.shopagent.ShopAgentLoginActivity"
            android:parentActivityName=".ui.auth.PhoneNumberActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.shopagent.ShopAgentDashboardActivity"
            android:parentActivityName=".ui.shopagent.ShopAgentLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.shopagent.ShopAgentInventoryCheckActivity"
            android:parentActivityName=".ui.shopagent.ShopAgentDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.shopagent.CheckedItemsActivity"
            android:parentActivityName=".ui.shopagent.ShopAgentInventoryCheckActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.shopagent.ShopAgentInventoryCheckHistoryActivity"
            android:parentActivityName=".ui.shopagent.ShopAgentDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />

        <!-- Common Activities -->
        <activity
            android:name=".ui.common.TermsOfUseActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />
        
        <activity
            android:name=".ui.common.PrivacyPolicyActivity"
            android:exported="false"
            android:theme="@style/Theme.DialADrinkDriver" />

        <!-- Firebase Cloud Messaging -->
        <service
            android:name=".services.DriverFirebaseMessagingService"
            android:exported="false"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- Notification Channel -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="order-assignments" />

    </application>

</manifest>

